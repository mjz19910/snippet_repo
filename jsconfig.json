{
	"compilerOptions": {
		"target": "esnext",
		"lib": ["esnext","DOM"],
		"types": ["jquery"],
		"strict": true,
		"declaration": true,
		"checkJs": true,
		"allowJs": true,
		"strictNullChecks": true,
		"module":"nodenext",
		"moduleResolution": "node",
		"sourceMap": true,
		"noImplicitAny": true,
		"outDir": "./lib",
		"typeRoots": [
			"./node_modules/@types"
		]
	},
	"include": ["**/*"],
	"exclude": [
		"node_modules",
		"**/*-spec.ts"
	]
}