{
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": ".",
		"checkJs": true,
		"declaration": true,
		"experimentalDecorators": true,
		"lib": [
			"esnext",
			"DOM"
		],
		"module": "ESNext",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"outDir": "typescript_build",
		"sourceMap": true,
		"strict": true,
		"strictNullChecks": true,
		"target": "esnext",
		"types": [],
		"forceConsistentCasingInFileNames":true,
	},
	"include": [
		"**/*"
	],
	"exclude": [
		"**/*-spec.ts",
		"javascript_build",
		"node_modules",
		"typescript_build",
	]
}