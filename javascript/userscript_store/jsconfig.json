{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "esnext",
		"lib": ["esnext","DOM"],
		"types": [],
		"strict": true,
		"declaration": true,
		"checkJs": true,
		"allowJs": true,
		"strictNullChecks": true,
		"module":"ESNext",
		"moduleResolution": "node",
		"sourceMap": true,
		"noImplicitAny": true,
		"outDir": "./lib",
		"typeRoots": [
			"./node_modules/@types"
		],
		"paths":{
			"api":["types/api.js"],
		}
	},
	"include": ["**/*"],
	"exclude": [
		"node_modules",
		"**/*-spec.ts"
	]
}