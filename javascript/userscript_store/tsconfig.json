{
	"compilerOptions": {
		"baseUrl": ".",
		"experimentalDecorators": true,
		"target": "esnext",
		"lib": [
			"esnext",
			"DOM"
		],
		"types": [
			"jquery"
		],
		"declaration": true,
		"module": "NodeNext",
		"moduleResolution": "node",
		"sourceMap": true,
		"noImplicitAny": true,
		"outDir": "../typescript_lib",
		"strict": true,
		"typeRoots": [
			"./node_modules/@types"
		],
	},
	"include": [
		"**/*"
	],
	"exclude": [
		"node_modules",
		"**/*-spec.ts",
		"./lib"
	]
}