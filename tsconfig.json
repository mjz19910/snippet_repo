{
	"compilerOptions": {
		"experimentalDecorators": true,
		"target": "esnext",
		"lib": [
			"esnext",
			"DOM"
		],
		"types": [
			"jquery",
			"node",
		],
		"declaration": true,
		"module": "AMD",
		"moduleResolution": "NodeNext",
		"sourceMap": true,
		"noImplicitAny": true,
		"outDir": "./build",
		"strict": true,
		"typeRoots": [
			"./node_modules/@types"
		],
		"baseUrl": ".",
		"allowJs": true,
	},
	"include": [
		"typescript/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*-spec.ts",
		"./build"
	]
}