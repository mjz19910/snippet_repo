{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "ESNext",
		"lib": [
			"ESNext",
			"DOM"
		],
		"types": [],
		"strict": true,
		"declaration": true,
		"checkJs": true,
		"allowJs": true,
		"strictNullChecks": true,
		"module": "Node16",
		"moduleResolution": "Node16",
		"sourceMap": true,
		"noImplicitAny": true,
		"outDir": "./dist",
		"typeRoots": [
			"~/workspace/node_types/node_modules/@types"
		],
		"esModuleInterop": true,
	},
	"include": [
		"**/*"
	],
	"exclude": [
		"node_modules",
		"**/*-spec.ts"
	]
}