{
	"compilerOptions": {
		"target": "esnext",
		"lib": [
			"esnext",
			"DOM",
		],
		"types": [
			"node",
		],
		"strict": true,
		"declaration": true,
		"checkJs": true,
		"allowJs": true,
		"strictNullChecks": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"sourceMap": true,
		"noImplicitAny": true,
		"outDir": "./dist",
		"typeRoots": [
			"~/workspace/node_types/node_modules/@types"
		],
	},
	"include": [
		"src/**/*",
	],
	"exclude": [
		"node_modules",
		"**/*-spec.ts",
		"./dist",
	]
}