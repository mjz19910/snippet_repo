{
	"compilerOptions": {
		"experimentalDecorators": true,
		"target": "ESNext",
		"lib": [
			"ESNext",
			"DOM"
		],
		"types": [
			"jquery",
			"node",
		],
		"declaration": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"sourceMap": true,
		"outDir": "./build",
		"strict": true,
		"typeRoots": [
			"./node_modules/@types"
		],
		"allowJs": true,
		"checkJs": true,
		"incremental": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noFallthroughCasesInSwitch": true,
		"noErrorTruncation": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"useUnknownInCatchVariables": true,
		"isolatedModules": true,
		// todo
		"noPropertyAccessFromIndexSignature": false,
		// windows needs this
		"forceConsistentCasingInFileNames": true,
	},
	"ts-node": {
		"esm": true,
	},
	"include": [
		"**/*",
	],
	"exclude": [
		"node_modules",
		"**/*-spec.ts",
		"./build"
	],
}