{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "Node16",
		"lib": [
			"esnext",
			"DOM"
		],
		"types": [],
		"outDir": "./build",
		"typeRoots": [
			"~/workspace/node_types/node_modules/@types"
		],
		"allowJs": true,
		"checkJs": true,
		"declaration": true,
		"experimentalDecorators": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"strict": true,
		"forceConsistentCasingInFileNames":true,
	},
	"include": [
		"src/**/*",
		"dead_src/**/*",
		"types/**/*",
	],
	"exclude": [
		"node_modules",
		"**/*-spec.ts",
		"./build"
	]
}