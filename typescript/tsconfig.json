{
	"compilerOptions": {
		"experimentalDecorators": true,
		"target": "ESNext",
		"lib": [
			"ESNext",
			"DOM"
		],
		"types": [
			"jquery",
			"node",
		],
		"declaration": true,
		"module": "ESNext",
		"moduleResolution": "NodeNext",
		"sourceMap": true,
		"noImplicitAny": true,
		"outDir": "./build",
		"strict": true,
		"typeRoots": [
			"./node_modules/@types"
		],
		"baseUrl": ".",
		"allowJs": true,
		"checkJs": true,
		"incremental": true,
		"strictNullChecks": true,
		"strictBindCallApply": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"alwaysStrict": true,
	},
	"ts-node": {
        "esm": true
    },
	"include": [
		"**/*",
	],
	"exclude": [
		"node_modules",
		"**/*-spec.ts",
		"./build"
	]
}