{
	"compilerOptions": {
		"experimentalDecorators": true,
		"target": "ESNext",
		"lib": [
			"ESNext",
			"DOM"
		],
		"types": [
			"jquery",
			"node",
		],
		"declaration": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"sourceMap": true,
		"noImplicitAny": true,
		"outDir": "./build",
		"strict": true,
		"typeRoots": [
			"./node_modules/@types"
		],
		"allowJs": true,
		"checkJs": true,
		"incremental": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noPropertyAccessFromIndexSignature": true,
		"noUnusedLocals":true,
		"noUnusedParameters":true,
		"useUnknownInCatchVariables":true,
		"isolatedModules":true,
		"paths": {
			"root:*": ["./src/*"]
		}
	},
	"ts-node": {
		"esm": true,
	},
	"include": [
		"src/**/*",
	],
	"exclude": [
		"node_modules",
		"**/*-spec.ts",
		"./build"
	]
}