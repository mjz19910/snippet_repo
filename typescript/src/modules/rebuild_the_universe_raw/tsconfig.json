{
	"compilerOptions": {
		"experimentalDecorators": true,
		"target": "esnext",
		"lib": [
			"esnext",
			"DOM"
		],
		"types": [
			"jquery",
			"node",
		],
		"declaration": true,
		"module": "ES6",
		"moduleResolution": "Classic",
		"sourceMap": true,
		"noImplicitAny": true,
		"outDir": "./build",
		"typeRoots": [
			"~/workspace/node_types/node_modules/@types"
		],
		"allowJs": true,
		"strict": true,
		"forceConsistentCasingInFileNames":true,
	},
	"include": [
		"src/**/*",
	],
	"exclude": [
		"node_modules",
		"**/*-spec.ts",
		"./build"
	]
}